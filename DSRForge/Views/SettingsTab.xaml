<UserControl x:Class="DSRForge.Views.SettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="500"
             Focusable="True"
             FocusManager.FocusedElement="{x:Null}"
             Loaded="UserControl_Loaded">
    

    <Border BorderThickness="1" BorderBrush="#333" CornerRadius="3" Margin="10">
        <StackPanel Margin="10">
            <TextBlock Text="Hotkey Bindings" FontWeight="Bold" Margin="0,0,0,10"/>
            
         
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/> 
                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Save Pos 1:" VerticalAlignment="Center" Width="85" HorizontalAlignment="Left"/>
                <TextBox Grid.Column="1" 
                         Text="{Binding SavePos1HotkeyText}"
                         Style="{StaticResource HotkeyTextBoxStyle}"
                         GotFocus="HotkeyTextBox_GotFocus"
                         LostFocus="HotkeyTextBox_LostFocus"
                         Tag="SavePos1"
                         KeyDown="HotkeyTextBox_KeyDown"/>
                
                <TextBlock Grid.Column="3" Text="No Death:" VerticalAlignment="Center" Width="85" HorizontalAlignment="Left"/>
                <TextBox Grid.Column="4" 
                         Margin="5,0,-10,0"
                         Text="{Binding NoDeathHotkeyText}"
                         Style="{StaticResource HotkeyTextBoxStyle}"
                         GotFocus="HotkeyTextBox_GotFocus"
                         LostFocus="HotkeyTextBox_LostFocus"
                         Tag="NoDeath"
                         KeyDown="HotkeyTextBox_KeyDown"/>
            </Grid>
            
      
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/> 
                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Save Pos 2:" VerticalAlignment="Center" Width="85" HorizontalAlignment="Left"/>
                <TextBox Grid.Column="1" 
                         Text="{Binding SavePos2HotkeyText}"
                         Style="{StaticResource HotkeyTextBoxStyle}"
                         GotFocus="HotkeyTextBox_GotFocus"
                         LostFocus="HotkeyTextBox_LostFocus"
                         Tag="SavePos2"
                         KeyDown="HotkeyTextBox_KeyDown"/>
                
                <TextBlock Grid.Column="3" Text="One Shot:" VerticalAlignment="Center" Width="85" HorizontalAlignment="Left"/>
                <TextBox Grid.Column="4" 
                         Margin="5,0,-10,0"
                         Text="{Binding OneShotHotkeyText}"
                         Style="{StaticResource HotkeyTextBoxStyle}"
                         GotFocus="HotkeyTextBox_GotFocus"
                         LostFocus="HotkeyTextBox_LostFocus"
                         Tag="OneShot"
                         KeyDown="HotkeyTextBox_KeyDown"/>
            </Grid>
            
          
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/> 
                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Restore Pos 1:" VerticalAlignment="Center" Width="85" HorizontalAlignment="Left"/>
                <TextBox Grid.Column="1" 
                         Text="{Binding RestorePos1HotkeyText}"
                         Style="{StaticResource HotkeyTextBoxStyle}"
                         GotFocus="HotkeyTextBox_GotFocus"
                         LostFocus="HotkeyTextBox_LostFocus"
                         Tag="RestorePos1"
                         KeyDown="HotkeyTextBox_KeyDown"/>
                
                <TextBlock Grid.Column="3" Text="Restore Spells:" VerticalAlignment="Center" Width="85" HorizontalAlignment="Left"/>
                <TextBox Grid.Column="4" 
                         Margin="5,0,-10,0"
                         Text="{Binding RestoreSpellCastsHotkeyText}"
                         Style="{StaticResource HotkeyTextBoxStyle}"
                         GotFocus="HotkeyTextBox_GotFocus"
                         LostFocus="HotkeyTextBox_LostFocus"
                         Tag="RestoreSpellCasts"
                         KeyDown="HotkeyTextBox_KeyDown"/>
            </Grid>
            
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/> 
                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Restore Pos 2:" VerticalAlignment="Center" Width="85" HorizontalAlignment="Left"/>
                <TextBox Grid.Column="1" 
                         Text="{Binding RestorePos2HotkeyText}"
                         Style="{StaticResource HotkeyTextBoxStyle}"
                         GotFocus="HotkeyTextBox_GotFocus"
                         LostFocus="HotkeyTextBox_LostFocus"
                         Tag="RestorePos2"
                         KeyDown="HotkeyTextBox_KeyDown"/>
                
                <TextBlock Grid.Column="3" Text="Increase Speed:" VerticalAlignment="Center" Width="85" HorizontalAlignment="Left"/>
                <TextBox Grid.Column="4" 
                         Margin="5,0,-10,0"
                         Text="{Binding IncreaseSpeedHotkeyText}"
                         Style="{StaticResource HotkeyTextBoxStyle}"
                         GotFocus="HotkeyTextBox_GotFocus"
                         LostFocus="HotkeyTextBox_LostFocus"
                         Tag="IncreaseSpeed"
                         KeyDown="HotkeyTextBox_KeyDown"/>
            </Grid>
            
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/> <!-- Spacer -->
                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="RTSR Setup:" VerticalAlignment="Center" Width="85" HorizontalAlignment="Left"/>
                <TextBox Grid.Column="1" 
                         Text="{Binding RtsrHotkeyText}"
                         Style="{StaticResource HotkeyTextBoxStyle}"
                         GotFocus="HotkeyTextBox_GotFocus"
                         LostFocus="HotkeyTextBox_LostFocus"
                         Tag="RTSR"
                         KeyDown="HotkeyTextBox_KeyDown"/>
                
                <TextBlock Grid.Column="3" Text="Decrease Speed:" VerticalAlignment="Center" Width="85" HorizontalAlignment="Left"/>
                <TextBox Grid.Column="4" 
                         Margin="5,0,-10,0"
                         Text="{Binding DecreaseSpeedHotkeyText}"
                         Style="{StaticResource HotkeyTextBoxStyle}"
                         GotFocus="HotkeyTextBox_GotFocus"
                         LostFocus="HotkeyTextBox_LostFocus"
                         Tag="DecreaseSpeed"
                         KeyDown="HotkeyTextBox_KeyDown"/>

            </Grid>
            
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/> 
                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
    
                <TextBlock Grid.Column="0" Text="No Clip:" VerticalAlignment="Center" Width="85" HorizontalAlignment="Left"/>
                <TextBox Grid.Column="1" 
                         Text="{Binding NoClipHotkeyText}"
                         Style="{StaticResource HotkeyTextBoxStyle}"
                         GotFocus="HotkeyTextBox_GotFocus"
                         LostFocus="HotkeyTextBox_LostFocus"
                         Tag="NoClip"
                         KeyDown="HotkeyTextBox_KeyDown"/>

                <TextBlock Grid.Column="3" Text="Freeze HP:" VerticalAlignment="Center" Width="85" HorizontalAlignment="Left"/>
                <TextBox Grid.Column="4" 
                         Margin="5,0,-10,0"
                         Text="{Binding FreezeHpHotkeyText}"
                         Style="{StaticResource HotkeyTextBoxStyle}"
                         GotFocus="HotkeyTextBox_GotFocus"
                         LostFocus="HotkeyTextBox_LostFocus"
                         Tag="FreezeHp"
                         KeyDown="HotkeyTextBox_KeyDown"/>
            </Grid>
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/> 
                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
    
                <TextBlock Grid.Column="0" Text="Repeat Action:" VerticalAlignment="Center" Width="85" HorizontalAlignment="Left"/>
                <TextBox Grid.Column="1" 
                         Text="{Binding RepeatActionHotkeyText}"
                         Style="{StaticResource HotkeyTextBoxStyle}"
                         GotFocus="HotkeyTextBox_GotFocus"
                         LostFocus="HotkeyTextBox_LostFocus"
                         Tag="RepeatAction"
                         KeyDown="HotkeyTextBox_KeyDown"/>
    
                <TextBlock Grid.Column="3" Text="Disable AI:" VerticalAlignment="Center" Width="85" HorizontalAlignment="Left"/>
                <TextBox Grid.Column="4" 
                         Margin="5,0,-10,0"
                         Text="{Binding DisableAiHotkeyText}"
                         Style="{StaticResource HotkeyTextBoxStyle}"
                         GotFocus="HotkeyTextBox_GotFocus"
                         LostFocus="HotkeyTextBox_LostFocus"
                         Tag="DisableAi"
                         KeyDown="HotkeyTextBox_KeyDown"/>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>