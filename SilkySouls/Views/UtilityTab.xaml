<UserControl x:Class="SilkySouls.Views.UtilityTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,0,0,10">
            <StackPanel Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <CheckBox Content="Enable Draw"
                              IsChecked="{Binding IsDrawEnabled}"
                              Grid.Column="0" />

                    <Border
                        Background="#3498db"
                        CornerRadius="10"
                        Width="12"
                        Height="12"
                        Margin="10,0,0,0"
                        Cursor="Hand"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Grid.Column="1"
                        MouseLeftButtonDown="DrawInfoBorder_MouseLeftButtonDown">
                        <TextBlock Text="i"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="10" />
                    </Border>
                </Grid>

                <UniformGrid Columns="2" Margin="20,5,0,0">
                    <CheckBox Content="Hitbox View"
                              IsEnabled="{Binding IsDrawEnabled}"
                              IsChecked="{Binding IsHitboxEnabled}"
                              Margin="0,2" />

                    <CheckBox Content="Player Sound View"
                              IsEnabled="{Binding IsDrawEnabled}"
                              IsChecked="{Binding IsSoundViewEnabled}"
                              Margin="0,2" />

                    <CheckBox Content="Draw Events"
                              IsEnabled="{Binding IsDrawEnabled}"
                              IsChecked="{Binding IsDrawEventEnabled}"
                              Margin="0,2" />

                    <CheckBox Content="Targeting View (Kinda useless)"
                              IsEnabled="{Binding IsDrawEnabled}"
                              IsChecked="{Binding IsTargetingViewEnabled}"
                              Margin="0,2" />
                </UniformGrid>
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,0,0,10">
            <StackPanel Margin="10">
                <UniformGrid Columns="2" Rows="2">
                    <!-- First Row, First Column -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <CheckBox Content="No Clip"
                                  IsChecked="{Binding IsNoClipEnabled}"
                                  IsEnabled="{Binding AreButtonsEnabled}"
                                  Margin="0,2"
                                  Grid.Column="0" />

                        <Border
                            Background="#3498db"
                            CornerRadius="10"
                            Width="12"
                            Height="12"
                            Margin="10,0,0,0"
                            Cursor="Hand"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Grid.Column="1"
                            MouseLeftButtonDown="NoClipInfoBorder_MouseLeftButtonDown">
                            <TextBlock Text="i"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       FontSize="10" />
                        </Border>
                    </Grid>
                    <CheckBox Content="Visible Tomb of the Giants"
                              IsChecked="{Binding IsFilterRemoveEnabled}"
                              Margin="0,2" />

                    <CheckBox Content="Disable Roll"
                              IsChecked="{Binding IsNoRollEnabled}"
                              Margin="0,2" />

                </UniformGrid>
            </StackPanel>
        </Border>

        <Border Grid.Row="2"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3">
            <StackPanel Margin="10">
                <TextBlock Text="Warp Locations"
                           FontWeight="Bold"
                           Margin="0,0,0,10" />

                <ComboBox ItemsSource="{Binding WarpLocations}"
                          DisplayMemberPath="Value"
                          SelectedItem="{Binding SelectedLocation, Mode=TwoWay}"
                          IsEnabled="{Binding AreButtonsEnabled}"
                          Margin="0,0,0,5" />

                <Button Content="Warp" Width="100"
                        Click="Warp_Click"
                        IsEnabled="{Binding AreButtonsEnabled}"
                        Height="25" />
            </StackPanel>
        </Border>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderThickness="1"
                    BorderBrush="#333"
                    CornerRadius="3"
                    Margin="0,0,5,0">
                <TabControl Margin="5">
                    <TabItem Header="Menu">
                        <WrapPanel Margin="5" HorizontalAlignment="Center">
                            <Button Content="Level Up"
                                    Click="LevelUpMenu_Click"
                                    IsEnabled="{Binding AreButtonsEnabled}"
                                    Height="25"
                                    Margin="0,2" />

                            <Button Content="Attunement"
                                    Click="AttunementMenu_Click"
                                    IsEnabled="{Binding AreButtonsEnabled}"
                                    Height="25"
                                    Margin="0,2" />
                            <Button Content="Upgrade Weapon"
                                    Click="UpgradeWeapon_Click"
                                    IsEnabled="{Binding AreButtonsEnabled}"
                                    Height="25"
                                    Margin="0,2" />

                            <Button Content="Upgrade Armor"
                                    Click="UpgradeArmor_Click"
                                    IsEnabled="{Binding AreButtonsEnabled}"
                                    Height="25"
                                    Margin="0,2" />
                            <!-- <Button Content="Upgrade Armor" -->
                            <!--         Click="UpgradeArmor_Click" -->
                            <!--         IsEnabled="{Binding AreButtonsEnabled}" -->
                            <!--         Height="25" -->
                            <!--         Margin="0,2"/> -->
                        </WrapPanel>
                    </TabItem>
                    <TabItem Header="Shops">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                            <WrapPanel Margin="5" HorizontalAlignment="Center">
                                <Button Content="Male Ud."
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="MaleUdMerchant_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Female Ud."
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="FemaleUdMerchant_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Zena"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Zena_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Patches"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Patches_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Shiva"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Shiva_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Griggs"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Griggs_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Dusk"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Dusk_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Ingward"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Ingward_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Laurentius"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Laurentius_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Eingyi"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Eingyi_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Quelana"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Quelana_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Petrus"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Petrus_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Reah"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Reah_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Oswald"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Oswald_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Logan"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Logan_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Crestfallen"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="CrestfallenMerchant_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Chester"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Chester_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Elizabeth"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Elizabeth_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                                <Button Content="Gough"
                                        IsEnabled="{Binding AreButtonsEnabled}"
                                        Click="Gough_Click"
                                        Height="24"
                                        Width="80"
                                        Margin="2" />
                            </WrapPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Border>

            <Border Grid.Column="1"
                    BorderThickness="1"
                    BorderBrush="#333"
                    CornerRadius="3"
                    Margin="5,0,0,0">
                <StackPanel Margin="10">
                    <TextBlock Text="Event Manager"
                               FontWeight="Bold"
                               Margin="0,0,0,10" />

                    <StackPanel>
                        <Button Content="Unlock All Bonfire Warps"
                                Click="UnlockBonfires_Click"
                                IsEnabled="{Binding AreButtonsEnabled}"
                                Height="25"
                                Margin="0,2" />

                        <Button Content="Unlock Kalameet"
                                Click="UnlockKalameet_Click"
                                IsEnabled="{Binding AreButtonsEnabled}"
                                Height="25"
                                Margin="0,5" />
                        <Button Content="Ring Gargoyles Bell"
                                Click="GargBell_Click"
                                IsEnabled="{Binding AreButtonsEnabled}"
                                Height="25"
                                Margin="0,5" />
                        <Button Content="Ring Quelagg Bell"
                                Click="QuelaggBell_Click"
                                IsEnabled="{Binding AreButtonsEnabled}"
                                Height="25"
                                Margin="0,5" />
                        <Button Content="Open Sen's Fortress"
                                Click="Sens_Click"
                                IsEnabled="{Binding AreButtonsEnabled}"
                                Height="25"
                                Margin="0,5" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>